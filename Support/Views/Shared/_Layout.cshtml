<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    
    
    <link rel="stylesheet" href="~/css/navbar.css">
    <script src="https://kit.fontawesome.com/537c77d3aa.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class="header">
        <div class="row">
            <div class="col-sm">
                <div class="header-top">
                    <ul>
                        <li>E-mail: <a href="">Vetcare@gmail.com</a>  <span class="dash">|</span></li>
                        <li>Phone: <a href="">+2-26831474</a> <span class="dash">|</span></li>

                    </ul>
                </div>
            </div>
            <div class="col-sm">
                <div class="social">
                    <ul>
                        <li><a href=""><i class="fa-brands fa-facebook-f"></i> </a></li>
                        <li><a href=""><i class="fa-brands fa-twitter"></i></a></li>
                        <li><a href=""><i class="fa-brands fa-linkedin-in"></i></a></li>
                        <li><a href=""><i class="fa-brands fa-dribbble"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="navbar">
            <nav class="navbar navbar-expand-lg navbar-light ">
                @Html.ActionLink("Vetcare", "Index", "Home", new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">

                        @Html.ActionLink("Home", "Index", "Home", new { @class = "nav-item nav-link active" })
                        @Html.ActionLink("About US", "About", "Home", new { @class = "nav-item nav-link" })
                        @Html.ActionLink("Contact Us", "Contact", "Home", new { @class = "nav-item nav-link" })
                        @Html.ActionLink("Services", "Services", "Home", new { @class = "nav-item nav-link" })
                        @Html.ActionLink("Shop", "Shop", "Home", new { @class = "nav-item nav-link" })
                        
                    </div>
                </div>

            </nav>
        </div>
    </div>
    <div>
        @RenderBody()
        <hr />
        <footer>                                                                             
            <p>&copy; @DateTime.Now.Year - My Vetcare Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
