@model Support.ViewModels.CartViewModel
@{
    ViewBag.Title = "Cart";
}

<link rel="stylesheet" href="~/css/shop.css">
<div class="container">
    <div class="Cart">
        <h1>Your Cart</h1>
        <br />
        
       
    <div class="row">

        <div class="col-lg-4">
            <div class="card" style="width: 18rem;">
                <img src="~/img/@Model.Shoppings.Icon" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text">@Model.Shoppings.Description</p>
                    <h5>@Model.Shoppings.Price EGP</h5>


                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            @using (Html.BeginForm("Check", "Customer"))
            {
                <br />
                <br />

                <div class="col-md-6" class="form-group">
                    @Html.LabelFor(m => m.Cart.Quantity)
                    @Html.TextBoxFor(m => m.Cart.Quantity, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Cart.Quantity)
                </div>
                <br />
                <h3 id="price">Price / Each = @Model.Shoppings.Price L.E</h3>
                <br />
                @Html.HiddenFor(m => m.Cart.Id)
                @Html.HiddenFor(m => m.Cart.Quantity)


                <button type="submit" class="btn btn-success">Check out</button>
            }<h1 id="ans"></h1>
            <button onclick="Calc()" class="btn btn-light">Calculate Total Price</button>
        </div>
        
        
        <script>
            function Calc() {
                var a = document.getElementById("Cart_Quantity").value;
                var b = @Model.Shoppings.Price;
                var res = parseFloat(a) * parseFloat(b);
                console.log(res);

                if (!isNaN(res)) {
                    document.getElementById("ans").innerHTML ="Total Price is " + res;
                }
            }
        </script>




        @*h1>@a</h1>*@
    </div>
        



        </div>
</div>